<header>
    <h1 id="homeHeader" class="websiteHeader">Genshin Impact Data</h1>
</header>

<div id="countdowns">
    <div class="dateAndTime">Today is: 
        <span id="currentDay" class="dAt">{{day}}</span></div>

    <div class="dateAndTime">Daily reset in: 
        <span id="resetDay" class="dAt">
            <p id="dhours">{{dhours}}</p>h
            <p id="dminutes">{{dminutes}}</p>m
            <p id="dseconds">{{dseconds}}</p>s
        </span>
    </div>

    <div class="dateAndTime">Weekly reset in: 
        <span id="resetWeek" class="dAt">
            <p id="wdays">{{wdays}}</p>d
            <p id="whours">{{dhours}}</p>h
            <p id="wminutes">{{dminutes}}</p>m
            <p id="wseconds">{{dseconds}}</p>s
        </span>
    </div>
</div>

{{#if user}}
<div id="showDomains">
    <h3 class="trackedDisplay">Available Domains</h3>
    <div id="domainDisplay">
        <div class="domainCol">
            <p>Domains of Forgery</p>
            <ul id="forgeryDoms" class="domainList removeBullets">
                {{#each forgery}}
                <li>{{this.name}} ({{this.region}})</li>
                {{/each}}
            </ul>
        </div>
        <div class="domainCol">
            <p>Domains of Mastery</p>
            <ul id="masteryDoms" class="domainList removeBullets">
                {{#each mastery}}
                <li>{{this.name}} ({{this.region}})</li>
                {{/each}}
            </ul>
        </div>
        <div class="domainCol">
            <p>Trounce Domains</p>
            <ul id="trounceDoms" class="domainList removeBullets">
                {{#each trounce}}
                <li>{{this.name}} ({{this.region}})</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div id="showTracked">
    <div id="showCharacters" class="showTrackedContent">
        <h3 class="trackedDisplay">Currently Tracked Characters</h3>
        <ul class="removeBullets">
            {{#each characters}}
            <li>{{this.name}}</li>
            {{/each}}
        </ul>
    </div>

    <div id="showWeapons" class="showTrackedContent">
        <h3 class="trackedDisplay">Currently Tracked Weapons</h3>
        <ul class="removeBullets">
            {{#each weapons}}
            <li>{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
</div>
{{/if}}

<script src="/js/main.js"></script>