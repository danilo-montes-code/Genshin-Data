<h2>Current Poll</h2>
<h3>{{poll.question}}</h3>
<form method="POST" action="/poll">
    <input type="hidden" name="title" value="{{poll.title}}">
    {{#each poll.answerOptions}}
    <input type="radio" name="answer" value={{this}} required>{{this}}</input><br>
    {{/each}}
    <input type="submit">
</form>

<h3>Current Votes</h3>
<ul class="no-bullets">
    {{#each votes}}
    <li>{{@key}}:{{this}}</li>
    {{/each}}
</ul>